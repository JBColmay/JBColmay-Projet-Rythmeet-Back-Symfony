{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center mt-5">Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>    
    </table>

    <div class="container">
    <div class="row justify-content-center">
    <div class="col-md-6">
    <a href="{{ path('app_comment_admin_edit', {'id': comment.id}) }}" class="btn btn-warning">Modifier</a>

    <a href="{{ path('app_comment_admin_index') }}" class="btn btn-dark">Retour</a>

    </div>
    </div>
    </div>

    {{ include('comment_admin/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center mt-5">Liste des utilisateurs</h1>
    <div class="container">
    <div class="row justify-content-center">
<div class="col-md-2">
<a href="{{ path('app_user_admin_new') }}" class="btn btn-success">Créer un nouvel utilisateur</a>
</div>
</div>
</div>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Mot de passe</th>
                <th>Pseudo</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Genre</th>
                <th>Date de naissance</th>
                <th>Img profil</th>
                <th>Bio</th>
                <th>Crée le</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td class="badge bg-dark text-wrap d-flex justify-content-center">{{ user.pseudo }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.gender }}</td>
                <td>{{ user.dateOfBirth ? user.dateOfBirth|date('Y-m-d') : '' }}</td>
                <td>{{ user.img }}</td>
                <td>{{ user.bio }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_user_admin_show', {'id': user.id}) }}" class="btn btn-primary">Voir</a>
                    <a href="{{ path('app_user_admin_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}

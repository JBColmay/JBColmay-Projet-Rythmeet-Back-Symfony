{% extends 'base.html.twig' %}

{% block title %}Concert{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center mt-5">Concert</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ concert.id }}</td>
            </tr>
            <tr>
                <th>Artist_name</th>
                <td>{{ concert.artistName }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ concert.date ? concert.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ concert.place }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ concert.createdAt ? concert.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="container">
    <div class="row justify-content-center">
    <div class="col-md-6">
    <a href="{{ path('app_concert_admin_edit', {'id': concert.id}) }}"class="btn btn-warning">Modifier</a>
    
    <a href="{{ path('app_concert_admin_index') }}"class="btn btn-dark">Retour</a>

    
    </div>
    </div>
    </div>

    {{ include('concert_admin/_delete_form.html.twig') }}
{% endblock %}
